// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_POSTGRES_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  hash String
  firstName String?
  lastName String?
  address String?
  city String?
  country String?
  createdAt DateTime @default(now())
  bookmarks Bookmark[]
  orders Order[]
  @@map("users")
}

model Order {
  id Int @id @default(autoincrement())
  orderId String @unique
  description String
  price Decimal
  discount Int?
  address String?
  city String?
  country String?
  products Product[]
  createdAt DateTime @default(now())
  userId Int
  user User @relation(fields: [userId], references: [id])
  @@map("orders")
}

model Product {
  id Int @id @default(autoincrement())
  name String
  image String
  description String
  price Decimal
  sale Int?
  createdAt DateTime @default(now())
  orderId String
  order Order @relation(fields: [orderId], references: [orderId])
  @@map("products")
}

model Bookmark {
  id Int @id @default(autoincrement())
  title String
  description String?
  link String
  createdAt DateTime @default(now())
  userId Int
  user User @relation(fields: [userId], references: [id])
  @@map("bookmarks")
}
